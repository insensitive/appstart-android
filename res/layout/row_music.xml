<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_albumart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txt_ttl_album"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_ic_mu"
        android:layout_toRightOf="@+id/iv_albumart"
        android:singleLine="true"
        android:text="Album Title"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_album"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ttl_album"
        android:layout_toLeftOf="@+id/iv_ic_mu"
        android:layout_toRightOf="@+id/iv_albumart"
        android:singleLine="true"
        android:text="Album"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_artist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_album"
        android:layout_toLeftOf="@+id/iv_ic_mu"
        android:layout_toRightOf="@+id/iv_albumart"
        android:singleLine="true"
        android:text="Artist"
        android:textColor="@color/darkgrey" />

    <ImageView
        android:id="@+id/iv_ic_mu"
      
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_music_play1" />

    <Button   android:layout_marginTop="8dp"
        android:id="@+id/btn_music_play1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        
        android:background="@drawable/btn_buy"
        android:focusable="false" />

</RelativeLayout>